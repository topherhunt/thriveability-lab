.row.hidden-xs
  %div{style: "width: 100%; height: 200px; background-image: url('#{image_path 'maxheaaauki-vincent-guth.jpg'}'); background-size: 100%; margin-top: -20px;"}
    %h1.text-center{style: "color: #eee; vertical-align: middle; line-height: 200px;"} Integral Climate is...

.row

  .col-sm-6
    %h4.text-center #{@users_count} people who envision a more sustainable world
    %div{style: 'position: relative;'}
      - @featured_users.each do |user|
        %div{style: 'float: left; width: 19.9%; padding: 0.5%;'}
          = link_to image_tag(user.image.url(:thumb), style: "width: 100%;", class: "js-tooltip", data: { tooltip: user.full_name }), user_path(user)
      .clear-float
    %p= link_to "Meet all members", users_path

  .col-sm-6
    %h4.text-center #{@projects_count} projects

    %div{style: "position: relative;"}
      - @featured_projects.each do |project|
        %div{style: "float: left; width: 33.2%; padding: 0.5%; overflow: hidden;"}
          %a{href: project_path(project), style: "display: block; position: relative; top: 0px; left: 0px; width: 100%; min-height: 100px;"}
            = image_tag project.image.url(:thumb), style: "width: 100%; opacity: 0.2;"
            = image_tag project.image.url(:thumb), class: "js-fadeout-on-hover", style: "width: 100%; position: absolute; top: 0px; left: 0px; z-index: 2; background-color: #ddf;"
            .homepage-project-desc{style: "position: absolute; top: 0px; left: 0px; z-index: 1; padding: 5px;"}
              %p{style: "font-size: 110%;"}
                .strong= project.title
              - if project.tag_list.any?
                %p= project.tag_list.join(", ")
              %p started by #{project.owner.full_name}
              %p #{project.received_stay_informed_flags.count} followers
      .clear-float
    %p= link_to "Explore all projects", projects_path

%hr

.row

  .col-sm-6
    %h4.text-center #{@posts_count} conversations
    %ul
      - @featured_posts.each do |post|
        %li= link_to post.title, post_path(post)
    %p= link_to "Explore all conversations", posts_path

  .col-sm-6
    %h4.text-center #{@resources_count} resources
    %ul
      - @featured_resources.each do |resource|
        %li= link_to resource.title, resource_path(resource)
    %p= link_to "Explore all resources", resources_path

%hr

.row
  .col-sm-3
  .col-sm-6
    %h4.text-center What's happening now
    - @recent_events.each do |event|
      %div.clear-float
        %div{style: "width: 50px; height: 50px; float: left; padding-right: 10px;"}
          = link_to image_tag(event.user.image.url(:thumb), class: "image-framed-tiny", style: "width: 100%;"), user_path(event.user)
        %div.small.text-muted= print_date event.datetime, time: true
        %div
          = link_to event.user.full_name, user_path(event.user)
          = event.action_description
          = link_to event.target_description, url_for(event.target)
