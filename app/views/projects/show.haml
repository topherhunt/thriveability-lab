.row
  .col-sm-8
    %div
      %span.h1= @project.title
      &nbsp;
      = link_to fa_icon("pencil"), edit_project_path(@project) if @project.owner == current_user
    %h4= @project.subtitle

    %table.table
      %tr
        %th Owner
        %td= link_to @project.owner.name, user_path(@project.owner)
      %tr
        %th Based in
        %td= @project.location
      %tr
        %th Stage
        %td= @project.stage
      %tr
        %th Tags
        %td
          - @project.tag_list.each do |name|
            = link_to name, projects_path(tags: name)
            &nbsp;
      %tr
        %th Needs
        %td
          - @project.need_list.each do |need|
            %span.label.label-default= need

    %hr

    %h4 Introduction
    %p
      - if @project.introduction.present?
        = @project.introduction
      - else
        No introduction yet.
        - if @project.owner == current_user
          = link_to "Write one", edit_project_path(@project)

    %h4 Quadrants
    .row
      .col-sm-6{style: "max-height: 100px; overflow: auto;"}
        %strong Vision:
        = @project.quadrant_ul
      .col-sm-6{style: "max-height: 100px; overflow: auto;"}
        %strong Goals:
        = @project.quadrant_ur
    .row{style: "padding-top: 10px;"}
      .col-sm-6{style: "max-height: 100px; overflow: auto;"}
        %strong Community:
        = @project.quadrant_ll
      .col-sm-6{style: "max-height: 100px; overflow: auto;"}
        %strong Context:
        = @project.quadrant_lr

    %h4 Resources & links
    - if @project.resources.any?
      %ul
        - @project.resources.each do |resource|
          = render partial: "resources/show_li", locals: { resource: resource }
      - if current_user == @project.owner
        %p= link_to "Add another resource", new_resource_path(resource: { target_type: "Project", target_id: @project.id })
    - else
      %p
        No resources connected to this project yet.
        - if current_user == @project.owner
          Use this space to add any links or documents relevant to this project, that could be useful to other community members. #{link_to "Add a resource", new_resource_path(resource: { target_type: "Project", target_id: @project.id })}

  .col-sm-4
    = image_tag @project.image.url(:medium), style: "width: 100%; max-width: 300px;", class: "image-framed"

    %hr
    %h4 Get connected

    = render partial: "shared/likes_section", locals: { target: @project, link_wording: "This inspires me" }

    %p.stay-informed
      - if current_user and StayInformedFlag.where(user: current_user, target: @project).any?
        = link_to fa_icon("bell") + " I want to stay informed", stay_informed_flag_path("Project", @project), method: :delete, class: "btn btn-default active"
      - else
        = link_to fa_icon("bell") + " I want to stay informed", stay_informed_flag_path("Project", @project), method: :post, class: "btn btn-info"
      - stay_informed_flags_count = @project.stay_informed_flags.count
      - if stay_informed_flags_count > 0
        &nbsp;
        %span.badge.stay-informed-flags-count= stay_informed_flags_count
    - if current_user == @project.owner and stay_informed_flags_count > 0
      %p= link_to "See list of people who want to stay informed", stay_informed_flags_path("Project", @project), class: "stay-informed-flags-details"

    %p.get-involved
      - if current_user and GetInvolvedFlag.where(user: current_user, target: @project).any?
        = link_to fa_icon("child") + "&nbsp; I want to get involved".html_safe, get_involved_flag_path("Project", @project), method: :delete, class: "btn btn-default active"
      - else
        = link_to fa_icon("child") + "&nbsp; I want to get involved".html_safe, get_involved_flag_path("Project", @project), method: :post, class: "btn btn-info"
      - get_involved_flags_count = @project.get_involved_flags.count
      - if get_involved_flags_count > 0
        &nbsp;
        %span.badge.get-involved-flags-count= get_involved_flags_count
    - if current_user == @project.owner and get_involved_flags_count > 0
      %p= link_to "See list of people who want to get involved", get_involved_flags_path("Project", @project), class: "get-involved-flags-details"

    - if @project.call_to_action.present?
      %hr
      %h4 How you can help out
      %p= @project.call_to_action

      %table.form
        %tr
          %th I'm offering...
          %td= select_tag :offering, options_for_select(["- select one -", "collaboration", "funding", "sponsorship", "feedback", "consulting", "spreading awareness"]), { class: "form-control" }
        %tr
          %th Comments
          %td= text_area_tag :comment, "", class: "form-control"
        %tr
          %td
          %td= link_to "Send (TODO)", "#", class: "btn btn-primary"
